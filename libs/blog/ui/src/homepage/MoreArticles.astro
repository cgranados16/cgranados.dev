---
const { articles } = Astro.props;
import { Image } from 'astro:assets';
---

<section class="py-8 md:py-12 lg:py-16">
  <div class="mx-auto px-4 md:px-6 lg:px-8">
    <h2
      class="mb-6 text-2xl text-4xl font-bold tracking-tight md:mb-8 lg:mb-10"
    >
      More Articles
    </h2>
    <div
      class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 md:gap-8 lg:gap-10"
    >
      {
        articles.map((post) => (
          <div class="overflow-hidden rounded-lg bg-white shadow-lg dark:bg-gray-900">
            <Image
              src={post.data.image.url}
              alt="Blog Post 1"
              width={500}
              height={300}
              class="h-48 w-full object-cover"
            />
            <div class="p-4 md:p-6">
              <h3 class="mb-2 text-xl font-bold">{post.data.title}</h3>
              <p class="mb-4 text-gray-500 dark:text-gray-400">
                {post.data.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
