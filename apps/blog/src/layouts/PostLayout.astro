---
import '@ui/tailwind.css';
import { Header, Footer } from '@ui';
import { ModeToggle } from '../components/ModeToggle';
import '@fontsource-variable/inter';
import { cn } from '@ui/lib/utils';
import { ViewTransitions } from "astro:transitions";
const { frontmatter } = Astro.props;
---

<script is:inline>
	const getThemePreference = () => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
			return localStorage.getItem('theme');
		}
		return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
	};
	const isDark = getThemePreference() === 'dark';
	document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
 
	if (typeof localStorage !== 'undefined') {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains('dark');
			localStorage.setItem('theme', isDark ? 'dark' : 'light');
		});
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	}
</script>


<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>
		<ViewTransitions />
	</head>

	<body class="min-h-screen bg-background font-sans antialiased">
		<Header>
			<div slot="modeToggle">
				<ModeToggle client:load/>
			</div>
		</Header>
		<div class="flex-1 container lg:w-5/12 items-center mt-12">
			<h1 class="scroll-m-20 text-4xl font-extrabold tracking-tight lg:text-5xl text-center mb-12">{frontmatter.title}</h1>
			<div class="border-base-300 dark:border-base-600/60 border justify-center overflow-hidden rounded-md shrink-0 sm:justify-normal md:col-span-2 mb-12">
				<figure>
					<img alt={frontmatter.image.alt} class="w-full transition-all duration-500 group-hover:scale-[1.02] h-auto max-h-96 object-cover" decoding="async" height="700" loading="lazy" src={frontmatter.image.url} width="1249">
				</figure>
			</div>
			<slot />
		</div>
		
		<Footer/>
	</body>
</html>



<style>
	:global(h1) {
	  @apply scroll-m-20 text-4xl font-extrabold tracking-tight lg:text-5xl;
	}
	:global(h2) {
	  @apply scroll-m-20 border-b pb-2 text-3xl font-semibold tracking-tight first:mt-0 mt-4;
	}
	:global(h3) {
	  @apply scroll-m-20 text-2xl font-semibold tracking-tight  mt-4;
	}
	:global(h4) {
	  @apply scroll-m-20 text-xl font-semibold tracking-tight mt-4;
	}
	:global(p) {
      @apply text-base leading-7 [&:not(:first-child)]:mt-6;
    }
	:global(blockquote) {
		@apply mt-6 border-l-2 pl-6 italic;
	}
	:global(code) {
		@apply relative rounded bg-muted px-[0.3rem] py-[0.2rem] font-mono text-sm font-semibold;
	}
	:global(ul) {
		@apply my-6 ml-6 list-disc;
		>li {
			@apply mt-2;
		}
	}
	:global(ol) {
		@apply my-6 ml-6 list-disc list-decimal;
		>li {
			@apply mt-2;
		}
	}
	:global(a) {
		@apply underline font-bold;
	}
</style>
